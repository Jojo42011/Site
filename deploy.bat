@echo off
echo üöÄ Aethon Platform Deployment Script
echo =====================================

REM Check if git is initialized
if not exist ".git" (
    echo ‚ùå Git not initialized. Initializing...
    git init
    git add .
    git commit -m "Initial commit"
    echo ‚úÖ Git initialized
) else (
    echo ‚úÖ Git already initialized
)

REM Check if remote origin exists
git remote get-url origin >nul 2>&1
if errorlevel 1 (
    echo ‚ùå No remote origin found.
    echo Please add your GitHub repository as origin:
    echo git remote add origin https://github.com/YOUR_USERNAME/YOUR_REPO.git
    pause
    exit /b 1
)

echo üì§ Pushing to GitHub...
git add .
git commit -m "Deploy to production - %date% %time%"
git push origin main

echo ‚úÖ Code pushed to GitHub!
echo.
echo üåê Next steps:
echo 1. Go to https://vercel.com
echo 2. Import your GitHub repository
echo 3. Add environment variables:
echo    - NEXT_PUBLIC_SUPABASE_URL
echo    - NEXT_PUBLIC_SUPABASE_ANON_KEY
echo    - STRIPE_SECRET_KEY
echo    - NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY
echo    - STRIPE_WEBHOOK_SECRET
echo    - NEXT_PUBLIC_APP_URL (your production domain)
echo 4. Deploy!
echo.
echo üéâ Your Aethon platform will be live in minutes!
pause
